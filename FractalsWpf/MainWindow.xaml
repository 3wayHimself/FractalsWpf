<Window x:Class="FractalsWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fractals"
        Height="500"
        Width="750"
        WindowState="Maximized"
        ResizeMode="CanResizeWithGrip">
    
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" x:Name="FractalImageWrapper">
            <Image x:Name="FractalImage" />
        </Grid>
        
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Width="300">
            <Label>Max iterations:</Label>
            <TextBlock Text="{Binding Path=MaxIterations}" Margin="10,0,10,10" />
            <Label>Zoom level:</Label>
            <TextBlock Text="{Binding Path=ZoomLevel}" Margin="10,0,10,10" />
            <StackPanel Orientation="Horizontal">
                <Slider x:Name="ZoomLevelSlider" Orientation="Vertical" Minimum="1" Maximum="100" Value="{Binding Path=ZoomLevel}" Height="400" Margin="20" />
                <Slider x:Name="MaxIterationsSlider" Orientation="Vertical" Minimum="10" Maximum="4096" Value="{Binding Path=MaxIterations}" Height="400" Margin="20" />
            </StackPanel>
        </StackPanel>
        
        <StatusBar Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="0">
            <StatusBarItem>
                <TextBlock x:Name="StatusBarText" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
</Window>
